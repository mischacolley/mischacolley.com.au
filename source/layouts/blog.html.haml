= wrap_layout :application do
  %section
    - if is_blog_article?
      = link_to "Back to Blog", "/blog", :class => 'back-top'
      %article
        .post-heading
          %h1= current_article.title
        .featured-image
          - if current_article.data.featured_image
            = image_tag current_article.url+"featured_image.jpg", resize_to: '960x378', class: 'thumbnail'
          - else
            = image_tag "/assets/svg/featured_image.svg", class: 'thumbnail'
          
        .article-inner.article
          = yield
      = link_to "Back to Blog", "/blog", :class => 'back-bottom'
    - else 
      %h1 Blog
      %p.section-desc infrequent posts about stuff and things
      .articles
        = yield

= stylesheet_link_tag "syntax_highlight"